#!/bin/sh

# Pre-commit hook: Auto-generate assets when source files change

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if source files are being committed
SOURCE_FILES_CHANGED=$(git diff --cached --name-only | grep -E '^_source/brands/.*\.(svg|png|jpg|jpeg|gif)$')

if [ -z "$SOURCE_FILES_CHANGED" ]; then
    # No source assets changed, skip generation
    exit 0
fi

echo "${YELLOW}Source assets changed, regenerating optimized variants...${NC}"

# Run the asset generation script
npm run build --silent

if [ $? -ne 0 ]; then
    echo "${RED}Asset generation failed. Commit aborted.${NC}"
    exit 1
fi

# Stage all generated assets
git add assets/v1/brands/

# Check if any files were generated
GENERATED_FILES=$(git diff --cached --name-only | grep -E '^assets/v1/brands/.*\.(svg|png|jpg|jpeg|webp|avif)$')

if [ -n "$GENERATED_FILES" ]; then
    echo "${GREEN}Generated assets added to commit:${NC}"
    echo "$GENERATED_FILES" | sed 's/^/  âœ“ /'
fi

exit 0
