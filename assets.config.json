{
    "$schema": "./scripts/assets.schema.json",
    "sourceDir": "_source",
    "outputDir": "site/v1",
    "useSemanticNames": false,
    "defaults": {
        "quality": {
            "jpg": 85,
            "png": 90,
            "webp": 85,
            "avif": 80
        },
        "formats": [
            "original",
            "webp"
        ],
        "sizes": []
    },
    "variants": {
        "description": "Standard logo variant naming conventions",
        "types": [
            {
                "suffix": "",
                "description": "Primary/default version (transparent background)"
            },
            {
                "suffix": "-dark",
                "description": "Optimized for dark backgrounds (light-colored logo)"
            },
            {
                "suffix": "-light",
                "description": "Optimized for light backgrounds (dark-colored logo)"
            },
            {
                "suffix": "-mono",
                "description": "Single color/monochrome version"
            },
            {
                "suffix": "-mono-dark",
                "description": "Monochrome for dark backgrounds (white/light)"
            },
            {
                "suffix": "-mono-light",
                "description": "Monochrome for light backgrounds (black/dark)"
            },
            {
                "suffix": "-knockout",
                "description": "Reversed/inverted colors"
            },
            {
                "suffix": "-on-dark",
                "description": "With dark solid background"
            },
            {
                "suffix": "-on-light",
                "description": "With light solid background"
            },
            {
                "suffix": "-on-brand",
                "description": "With brand color background"
            }
        ],
        "forms": [
            {
                "suffix": "",
                "description": "Full lockup (icon + wordmark)"
            },
            {
                "suffix": "-icon",
                "description": "Icon/symbol only"
            },
            {
                "suffix": "-wordmark",
                "description": "Text/wordmark only"
            },
            {
                "suffix": "-horizontal",
                "description": "Horizontal layout"
            },
            {
                "suffix": "-vertical",
                "description": "Vertical/stacked layout"
            },
            {
                "suffix": "-tagline",
                "description": "Includes tagline/slogan"
            }
        ]
    },
