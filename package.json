{
    "name": "static-assets",
    "version": "1.0.0",
    "description": "CDN-ready public static assets with automated generation pipeline",
    "type": "module",
    "scripts": {
        "build": "node scripts/generate-assets.js",
        "build:brand": "node scripts/generate-assets.js --brand",
        "catalog": "node scripts/generate-catalog.js",
        "clean": "rm -rf assets/v1/brands/*/generated",
        "prepare": "npm run build && npm run hooks:install",
        "hooks:install": "git config core.hooksPath .githooks",
        "hooks:uninstall": "git config --unset core.hooksPath"
    },
    "keywords": [
        "static-assets",
        "cdn",
        "images"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "sharp": "^0.34.5",
        "svgo": "^4.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}